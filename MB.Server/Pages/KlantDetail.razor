@page "/klantdetail/{KlantId}"
@inherits KlantDetailBase

<section class="Klant-detail">
    <h1 class="page-title">Details for @Klant.Voornaam @Klant.Achternaam</h1>

    @{ var leadingFormat = "00000";
    }
    <div class="col-12 row">
        <div class="col-10 row">
            <div class="col-xs-12 col-sm-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Klantnummer</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@Klant.KlantId.ToString(leadingFormat)</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Voornaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Klant.Voornaam</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Achternaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Klant.Achternaam</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Adres</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Klant.Adres</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Postcode</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Klant.Postcode</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Plaatsnaam</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@Klant.Stad</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
